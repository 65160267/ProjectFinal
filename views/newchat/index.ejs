          </div>
        </main>
      </section>

    </main>

    <%- include('../partials/footer_unified') %>
    <%- include('../partials/report_footer') %>
  
    <script id="me-base-json" type="application/json"><%- JSON.stringify(me || {}) %></script>
    <script id="avatar-raw" type="application/json"><%- JSON.stringify((user && user.avatar) || '') %></script>
    <script>
      // Expose current user info to the chat client, including a normalized avatar URL with robust fallback
      (function(){
        var base = {};
        try { base = JSON.parse(document.getElementById('me-base-json').textContent || '{}') || {}; } catch(e) {}
        var raw = '';
        try { raw = JSON.parse(document.getElementById('avatar-raw').textContent || '""') || ''; } catch(e) {}
        function normalizeAvatar(v){
          if (!v) return '/images/profile-placeholder.svg';
          var s = String(v).trim();
          if (!s || s.toLowerCase() === 'avatar' || s.toLowerCase() === 'null' || s.toLowerCase() === 'undefined') return '/images/profile-placeholder.svg';
          if (s.startsWith('http')) return s;
          if (s.startsWith('/')) return s;
          if (s.indexOf('.') === -1) return '/images/profile-placeholder.svg';
          return '/uploads/' + s;
        }
        var avatar = normalizeAvatar(raw);
        window.me = Object.assign({}, base, { avatar: avatar });
      })();
    </script>
    <script src="/js/newchat.js"></script>
  </body>
</html>
