<!doctype html>
<html lang="th">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>สมัครใช้งาน</title>
    <link rel="stylesheet" href="/css/style.css" />
    <style>
      body { font-family: Arial, Helvetica, sans-serif; background: #f3f4f6; margin: 0; display: flex; align-items: center; justify-content: center; height: 100vh }
      .card { background: #fff; padding: 22px; border-radius: 8px; width:100%; max-width:480px; box-shadow: 0 6px 18px rgba(0,0,0,0.06) }
      h1 { margin:0 0 10px }
      .field { margin-bottom:12px }
      label{ display:block; margin-bottom:6px }
      input { width:100%; padding:10px; border:1px solid #d1d5db; border-radius:6px }
      .error{ background:#fee2e2; color:#b91c1c; padding:8px; border-radius:6px; margin-bottom:12px }
      button{ background:#10b981; color:white; padding:10px 14px; border-radius:6px; border:none; cursor:pointer }
    </style>
  </head>
  <body>
    <div class="container">
      <div class="card auth-card">
        <h1>สมัครสมาชิก</h1>
        <% if (typeof error !== 'undefined' && error) { %>
          <div class="alert alert-error"><%= error %></div>
        <% } %>

        <form method="post" action="/auth/register">
          <div class="field">
            <label for="username">ชื่อผู้ใช้</label>
            <input id="username" name="username" type="text" required />
          </div>

          <div class="field">
            <label for="display_name">ชื่อที่แสดง (ไม่บังคับ)</label>
            <input id="display_name" name="display_name" type="text" />
          </div>

          <div class="field">
            <label for="password">รหัสผ่าน</label>
            <input id="password" name="password" type="password" required />
          </div>

          <div class="field">
            <label for="confirm">ยืนยันรหัสผ่าน</label>
            <input id="confirm" name="confirm" type="password" required />
          </div>

          <div style="display:flex;gap:10px;align-items:center">
            <button class="btn btn-primary" type="submit">สมัคร</button>
            <a href="/auth/login" class="btn btn-ghost">กลับไปล็อกอิน</a>
          </div>
        </form>
      </div>
    </div>
  </body>
  </html>
