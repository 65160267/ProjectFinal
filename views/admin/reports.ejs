<!doctype html>
<html>
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <title>Admin Reports</title>
    <link rel="stylesheet" href="/css/style.css" />
    <style>
      .reports-wrap { max-width: 1100px; margin: 24px auto; }
      .report-card { background: #fff; border: 1px solid #e9ecef; padding: 12px; border-radius: 8px; margin-bottom: 12px; }
      .report-meta { font-size: 12px; color: #6c757d; }
      .status-open { color: #856404; background: #fff3cd; padding: 4px 8px; border-radius: 12px; font-weight: 700; }
      .status-resolved { color: #155724; background: #d4edda; padding: 4px 8px; border-radius: 12px; font-weight: 700; }
      .admin-controls { display:flex; gap:8px; align-items:center; }
      .btn { padding: 8px 12px; border-radius:6px; text-decoration:none; display:inline-block; }
      .btn-danger { background:#dc3545; color:white; }
      .btn-primary { background:#007bff; color:white; }
      .report-form { margin-bottom: 20px; }
    </style>
  </head>
  <body>
    <header class="site-header">
      <div class="header-inner container">
        <div class="brand"><a href="/dashboard">SwapABook</a></div>
        <nav class="header-actions">
          <a href="/admin">Admin</a>
          <a href="/admin/dashboard">Dashboard</a>
          <a href="/admin/reports">Reports</a>
          <a href="/auth/logout">Logout</a>
        </nav>
      </div>
    </header>

    <main class="container reports-wrap">
      <h1>รายงานข้อผิดพลาด / ปัญหา</h1>

      <section class="report-form">
        <h3>สร้างรายงาน (ทดสอบ)</h3>
        <form method="post" action="/admin/reports">
          <div>
            <label>หัวข้อ</label><br />
            <input name="title" style="width:100%; padding:8px;" />
          </div>
          <div style="margin-top:8px;">
            <label>รายละเอียด</label><br />
            <textarea name="description" rows="4" style="width:100%; padding:8px;"></textarea>
          </div>
          <div style="margin-top:8px;">
            <button class="btn btn-primary" type="submit">ส่งรายงาน</button>
          </div>
        </form>
      </section>

      <section>
        <h3>รายการรายงานล่าสุด</h3>
        <% if (Array.isArray(reports) && reports.length > 0) { %>
          <% reports.forEach(function(r) { %>
            <div class="report-card">
              <div style="display:flex; justify-content:space-between; align-items:center;">
                <div>
                  <strong><%= r.title %></strong>
                  <div class="report-meta">โดย <%= r.reporter_username %> • <%= r.created_at ? new Date(r.created_at).toLocaleString('th-TH') : '' %></div>
                </div>
                <div class="admin-controls">
                  <div class="<%= r.status === 'resolved' ? 'status-resolved' : 'status-open' %>"><%= r.status %></div>
                  <% if (r.status !== 'resolved') { %>
                    <button class="btn btn-danger" onclick="resolveReport(<%= r.id %>, this)">Resolve</button>
                  <% } %>
                </div>
              </div>
              <p style="margin-top:8px"><%= r.description %></p>
            </div>
          <% }); %>
        <% } else { %>
          <div class="report-card">
            <p class="muted">ยังไม่มีรายงาน (หรือตาราง admin_reports ยังไม่ได้ถูกสร้าง)</p>
          </div>
        <% } %>
      </section>
    </main>

    <script>
      async function resolveReport(id, btn) {
        btn.disabled = true;
        try {
          const res = await fetch('/admin/reports/' + id + '/resolve', { method: 'POST', headers: { 'Content-Type': 'application/json' } });
          const data = await res.json();
          if (data.success) {
            btn.textContent = 'Resolved';
            btn.disabled = true;
            // optional: reload
            setTimeout(() => location.reload(), 400);
          } else {
            alert('ไม่สามารถทำเครื่องหมาย resolved ได้');
            btn.disabled = false;
          }
        } catch (err) {
          alert('เกิดข้อผิดพลาด');
          btn.disabled = false;
        }
      }
    </script>
  </body>
</html>
