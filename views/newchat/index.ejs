<!doctype html>
<html>
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width,initial-scale=1" />
    <title>Messages | SwapABook</title>
    <link rel="stylesheet" href="/css/messages.css?v=<%= Date.now() %>" />
    <script src="/socket.io/socket.io.js"></script>
  </head>
  <body>
    <main class="chat-page">
      

        <!-- Global site header (same as other pages) -->
        <header class="site-header">
          <div class="header-inner container">
            <div class="brand">
              <a href="/dashboard" class="brand">SwapABook</a>
            </div>
            <nav class="header-actions">
              <a href="/books" title="Books">üìö</a>
              <a href="/messages" title="Messages">üí¨</a>
              <% if (typeof user !== 'undefined' && user && user.username) { %>
                <a href="/user" class="header-user" title="Your profile">
                  <img class="user-avatar"
                       src="<%= (user.avatar && user.avatar.startsWith('/')) ? user.avatar : (user.avatar ? '/uploads/' + user.avatar : '/images/profile-placeholder.svg') %>"
                       alt="Profile"
                       onerror="this.src='/images/profile-placeholder.svg'" />
                  <span class="username"><%= user.username %></span>
                </a>
                <a href="/auth/logout" title="Logout">üîì</a>
              <% } else { %>
                <a href="/auth/login" title="Login">üîì</a>
              <% } %>
            </nav>
          </div>
        </header>
      <section class="chat-wrap">
        <aside class="chat-list">
          <div class="list-header">
            <h3>‡πÅ‡∏ä‡∏ó</h3>
            <div>
              <div class="search-wrap"><input class="list-search" id="convSearch" placeholder="‡∏Ñ‡πâ‡∏ô‡∏´‡∏≤‡∏ú‡∏π‡πâ‡πÉ‡∏ä‡πâ‡∏á‡∏≤‡∏ô‡∏´‡∏£‡∏∑‡∏≠‡∏Ç‡πâ‡∏≠‡∏Ñ‡∏ß‡∏≤‡∏°" /></div>
              <a class="view-all" href="/messages">‡∏î‡∏π‡∏ó‡∏±‡πâ‡∏á‡∏´‡∏°‡∏î</a>
            </div>
          </div>

          <ul class="conversations" id="conversations">
            <% (conversations || []).forEach(function(c){ %>
              <li class="conv-item" data-user-id="<%= c.id %>" data-username="<%= c.username %>">
                <img class="conv-avatar" src="<%= c.avatar %>" alt="avatar" />
                <div class="conv-meta">
                  <div class="conv-top"><strong class="conv-name"><%= c.username %></strong> <span class="conv-time"><%= c.time || '' %></span></div>
                  <div class="conv-snippet"><%= c.snippet || '' %></div>
                </div>
                <div class="conv-badge"><%= c.unread || '' %></div>
              </li>
            <% }) %>
          </ul>
        </aside>

        <main class="chat-panel">
          <div class="panel-header">
            <img class="panel-avatar" src="/images/default-avatar.png" data-default="/images/default-avatar.png" alt="avatar" />
            <div class="panel-user">
              <div class="panel-name">‡∏ú‡∏π‡πâ‡πÉ‡∏ä‡πâ</div>
              <div class="panel-username">@username</div>
            </div>
            <div class="panel-status" id="panelStatus"></div>
          </div>

          <div class="panel-messages" id="messages" aria-live="polite"></div>

          <div class="panel-composer">
            <div class="composer-box">
              <textarea id="msgInput" placeholder="‡∏û‡∏¥‡∏°‡∏û‡πå‡∏Ç‡πâ‡∏≠‡∏Ñ‡∏ß‡∏≤‡∏°..." rows="1"></textarea>
            </div>
            <button id="sendBtn" class="send-btn">‡∏™‡πà‡∏á</button>
          </div>
        </main>
      </section>

    </main>

    <%- include('../partials/footer_unified') %>
    <%- include('../partials/report_footer') %>
  
    <script>
      // Expose current user info to the chat client, including a normalized avatar URL
      (function(){
        var base = JSON.parse('<%- JSON.stringify(me || {}) %>') || {};
        var raw = <%- JSON.stringify((user && user.avatar) || '') %>;
        var avatar = raw ? (String(raw).startsWith('/') ? String(raw) : ('/uploads/' + String(raw))) : '/images/profile-placeholder.svg';
        window.me = Object.assign({}, base, { avatar: avatar });
      })();
    </script>
    <script src="/js/newchat.js"></script>
  </body>
</html>
