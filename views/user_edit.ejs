  <script>
    function previewAvatar(e){
      const file = e && e.target && e.target.files && e.target.files[0];
      if (!file) return;
      const url = URL.createObjectURL(file);
      const img = document.getElementById('avatarPreview');
      if (img) img.src = url;
    }

    (function () {
      const form = document.getElementById('editProfileForm');
      if (!form) return;
      const errorBox = document.getElementById('formError');
      const requiredFields = ['full_name', 'username', 'location'];

      const showError = () => {
        if (!errorBox) return;
        errorBox.style.display = 'block';
        errorBox.innerHTML = '<span><span class="form-error-icon">!</span><span>‡∏Å‡∏£‡∏∏‡∏ì‡∏≤‡∏Å‡∏£‡∏≠‡∏Å‡∏Ç‡πâ‡∏≠‡∏°‡∏π‡∏•‡πÉ‡∏´‡πâ‡∏Ñ‡∏£‡∏ö‡∏ñ‡πâ‡∏ß‡∏ô‡∏Å‡πà‡∏≠‡∏ô‡∏Å‡∏î‡∏ö‡∏±‡∏ô‡∏ó‡∏∂‡∏Å</span></span>';
      };

      const hideError = () => {
        if (!errorBox) return;
        errorBox.style.display = 'none';
        errorBox.innerHTML = '';
      };

      requiredFields.forEach((name) => {
        const field = form.elements[name];
        if (!field) return;
        field.addEventListener('input', () => {
          if ((field.value || '').trim()) {
            field.classList.remove('input-error');
            field.removeAttribute('aria-invalid');
            const stillInvalid = requiredFields.some((key) => {
              const ctrl = form.elements[key];
              return ctrl && ctrl.classList.contains('input-error');
            });
            if (!stillInvalid) hideError();
          }
        });
      });

      form.addEventListener('submit', function (event) {
        let hasError = false;
        requiredFields.forEach((name) => {
          const field = form.elements[name];
          if (!field) return;
          const value = (field.value || '').trim();
          if (!value) {
            hasError = true;
            field.classList.add('input-error');
            field.setAttribute('aria-invalid', 'true');
          } else {
            field.classList.remove('input-error');
            field.removeAttribute('aria-invalid');
          }
        });

        if (hasError) {
          event.preventDefault();
          showError();
          const firstError = requiredFields
            .map((name) => form.elements[name])
            .find((field) => field && field.classList.contains('input-error'));
          if (firstError) firstError.focus({ preventScroll: false });
        } else {
          hideError();
        }
      });
    })();
  </script>
