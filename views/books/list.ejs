<!doctype html>
  <body>
    <div class="container">
      <div class="card">
        <h1>All Books</h1>
        <p class="muted"><a href="/">Home</a> | <a class="btn btn-ghost" href="/books/new">Add book</a></p>

        <table>
          <thead><tr><th>Title</th><th>Author</th></tr></thead>
          <tbody>
          <% if (books && books.length) { %>
            <% books.forEach(b => { %>
              <tr>
                <td><a href="/books/<%= b.id %>"><%= b.title %></a></td>
                <td><%= b.author %></td>
              </tr>
            <% }) %>
          <% } else { %>
            <tr><td colspan="2">No books</td></tr>
          <% } %>
          </tbody>
        </table>
      </div>
    </div>
